<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>
      {{!-- {{title}} --}}
    </title>

    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <header class="header">
      <nav>
        <img src="/images/logo.avif" class="logo" />
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/search">Search</a></li>
          <li><a href="/catalog">All Volcanoes</a></li>

          {{! user }}
          {{#if isAuthenticated}}
            <li><a href="/create">Create Volcano Wiki</a></li>
            <li><a href="/auth/logout">Logout</a></li>
            {{! guest }}
          {{else}}
            <li><a href="/auth/login">Login</a></li>
            <li><a href="/auth/register">Register</a></li>
          {{/if}}

        </ul>
       
          <em style="color: black;">{{username}}</em>
       

      </nav>
    </header>

    <main>
      {{#if error}}
        <div>
          <div class="errorContainer">
            <p>{{error}}</p>
          </div>
        </div>
      {{/if}}
      {{{body}}}
    </main>

    <footer>
      <p>&copy JS Back-End 2024</p>
    </footer>

  </body>

</html>